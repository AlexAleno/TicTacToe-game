<Window x:Class="TicTacToe.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Startup" Height="600" Width="600">
    <Grid>
        <Label Content="Start New Game" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.394,0.238"/>
        <Label Content="Choose X or O (X usually plays first)" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"/>
        <Image Source="Images/tic-tac-toe_x.png" Height="100" Margin="0,0,330,373" VerticalAlignment="Bottom" HorizontalAlignment="Right"  MouseDown="x_image_MouseDown"/>
        <Image Source="Images/tic-tac-toe_o.png" Height="100" Margin="330,0,0,373" VerticalAlignment="Bottom" HorizontalAlignment="Left"  MouseDown="x_image_MouseDown"/>
    </Grid>
</Window>
